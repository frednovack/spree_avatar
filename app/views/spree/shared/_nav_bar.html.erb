<ul id="nav-bar" class="nav align-items-center d-flex justify-content-end navbar-right">
  <li>
    <div class="navbar-right-search-menu">
      <button type="button" class="navbar-right-dropdown-toggle search-icons" aria-label="<%= Spree.t('nav_bar.show_search')%>">
        <%= icon(name: 'magnifying-glass',
                 classes: 'd-none d-xl-inline-block',
                 width: 36,
                 height: 36)  %>

        <%= icon(name: 'magnifying-glass',
                 classes: 'd-xl-none',
                 width: 24,
                 height: 24)  %>
      </button>

      <div id="search-dropdown" class="p-0 px-md-4 py-md-2 w-100 shadow navbar-right-search-menu-dropdown hide-on-esc">
        <%= render partial: 'spree/shared/search' %>
      </div>
    </div>
  </li>
  <% if defined?(spree.account_link_path) %>
    <li>
      <div class="dropdown navbar-right-dropdown">
        <% if spree_current_user &&
              spree_current_user.avatar.attached? &&
              spree_current_user.avatar_ikon %>
          <button type="button" data-toggle="dropdown" class="navbar-right-dropdown-toggle" aria-label="<%= Spree.t('nav_bar.show_user_menu')%>">
            <%= image_tag(main_app.url_for(spree_current_user.avatar),
                    :class => 'd-none d-xl-inline-block avatar-ikon',
                    size: 40) %>
            <%= image_tag(main_app.url_for(spree_current_user.avatar),
                    :class => 'd-xl-none avatar-ikon',
                    size: 27) %>
          </button>
        <% else %>
          <button type="button" data-toggle="dropdown" class="navbar-right-dropdown-toggle" aria-label="<%= Spree.t('nav_bar.show_user_menu')%>">
            <%= icon(name: 'person',
                    classes: 'd-none d-xl-inline-block',
                    width: 41.4,
                    height: 36)  %>
            <%= icon(name: 'person',
                    classes: 'd-xl-none',
                    width: 27.6,
                    height: 24)  %>
          </button>
        <% end %>

        <div id="link-to-account" class="dropdown-menu dropdown-menu-right text-right" data-turbolinks-permanent>
        </div>
      </div>
    </li>
  <% end %>
  <li id="link-to-cart">
    <span class="d-none d-xl-inline-block cart-icon--xl">
      <%= icon(name: 'bag',
               width: 41.8,
               height: 36)  %>
    </span>
    <span class="d-xl-none">
      <%= icon(name: 'bag',
               width: 27.8,
               height: 24)  %>
    </span>
  </li>
</ul>
